#!/bin/env bash

set -eux

make clean
GOOS=linux GOARCH=arm make runner
rsync -rP ./runner qrystal-test@serika.umi:/home/qrystal-test/
rsync -rP ./testnet-serika.yml qrystal-test@serika.umi:/home/qrystal-test/runner/testnet.yml
rsync -rP ../local/rootCACert.pem qrystal-test@serika.umi:/home/qrystal-test/cert.pem
rsync -rP ../local/rootCACert.pem qrystal-test@serika.umi:/home/qrystal-test/rootCACert.pem
ssh -t qrystal-test@serika.umi -- 'cd runner && sudo ./runner-bin -config ./runner-config.yml'
